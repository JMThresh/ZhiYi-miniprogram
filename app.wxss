/**app.wxss**/

@import "./styles/iconfont.wxss";

/* 在微信小程序中 不支持 通配符 '*'  p0+m0+bz */
page,view,text,swiper,swiper-item,image,navigator{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

/* 
  主题颜色 通过变量来实现
  1 less 中 存在 变量这个知识
  2 原生的css和wxss也是支持 变量
*/
page{
  /* 定义主题颜色 */
  --themeColor:#13b5ed;
  /* 
    定义统一字体大小  假设设计稿大小是  375px
    1 px = 2 rpx
    14 px = 28rpx
    28与rpx中间不可以有空格
  */
  padding: 0;
  font-size: 28rpx;
  background-color: #f4f6fa;
}
image{
  /* 使所有图片都占据100%容器宽度 */
  width: 100%;
}